#!/usr/bin/env bash
#
# Git pre-commit hook
#

##
# The Makefile target runner
##
function runTarget {
  target="${1}"

  printf '\nğŸƒâ€â™€ï¸ [EXEC] Running target: %s\n' "${target}"

  if ! make "${target}"; then
    printf 'ğŸ”´  [FAIL] %s\n' "${target}"
    exit 1
  fi

  printf '\n\n\n'
}


##
# General targets irrelevant of changes made.
# - Must be quick
# - Run for many areas of the codebase
##
TARGETS=(
  lint
  test
)

for target in "${TARGETS[@]}"; do runTarget "${target}"; done


##
# Specific targets that only care about Dockerfiles
##
TARGETS=(
  lint-dockerfile
)

path="Dockerfile"

if [[ $(git diff --cached -- "${path}" | wc -l) -gt 0 ]]; then
  for target in "${TARGETS[@]}"; do runTarget "${target}"; done
fi
